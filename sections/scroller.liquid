{% comment %}
  Scroller
{% endcomment %}

<div class="scroller scroller--{{ section.id }}" style="background-image:url({{ section.settings.image | image_url: width: 1600 }});">

  <div class="scroller__heading">
    <div class="scroller__heading__inner">
      <h2 class="colour--white">{{ section.settings.heading }}</h2>
      {{ section.settings.content }}
    </div>
  </div>

  <div class="scroller__grid">
    <div class="scroller__grid__carousel" id="scroller--{{ section.id }}">

    {%- for block in section.blocks -%}
      <div class="scroller__grid__carousel__item" id="{{ block.id }}" >
        <div class="scroller__grid__carousel__item__heading">
          <h4>{{ block.settings.heading }}</h4>
        </div>
        <div class="scroller__grid__carousel__item__content">
          {{ block.settings.content }}
        </div>
        <a href="{{ block.settings.button_link }}" class="scroller__grid__carousel__item__link">
          {{ block.settings.button_label }}
        </a>
      </div>
    {%- endfor -%} 
  
    </div>
  </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.9.2/min/tiny-slider.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.9.4/tiny-slider.css">


<style>
  .tns-controls button:first-of-type {
    background-image: url({{ 'previous.svg' | asset_url }});
    left: -4rem;
  }
  .tns-controls button:last-of-type {
    background-image: url({{ 'next.svg' | asset_url }});
    right: -4rem;
  }
</style>

<script>
  tns({
    container:"#scroller--{{ section.id }}" ,
    items: 1,
    mouseDrag: true,
    nav: true,
    controls: true,
    slideBy: 1,
    responsive: {
      800: {
        items: 2
      },
      1000: {
        items: 3
      }
    }
  });
</script>

{% schema %}
{ 
  "name": "Scroller",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>The most common conditions we treat with medicinal cannabis are listed below.<br>Feel free to discuss any other conditions with us. We will give you an honest opinion as to whether medicinal cannabis would be worth trying.</p>" 
    }
  ],
  "blocks": [
    {
      "type": "scroller_item",
      "name": "Scroller item",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Anxiety" 
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content",
          "default": "<p>Anxiety is a very common condition and CBD has proved to be very effective in treating it.</p>" 
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Scroller",
      "blocks": [
        {
          "type": "scroller_item"
        },
        {
          "type": "scroller_item"
        },
        {
          "type": "scroller_item"
        }
      ]
    }
  ]
}   
{% endschema %}
  